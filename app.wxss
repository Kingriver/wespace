/**app.wxss**/
page{
  min-height: 100%;
  background: #F5F5F5;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
text{
  font-size:14px;
  font-family:'微软雅黑','Times New Roman';
}

/*S 评论框*/
._remark{
    background: #fff;
    padding:20rpx;
    border-top:0.1rpx solid rgba(77, 77, 77, 0.2);
    border-bottom:0.1rpx solid rgba(77, 77, 77, 0.2);
}
._remark.hidden{
    display: none;
}
._remark textarea{
    font-family: "微软雅黑";
    font-size: 0.8rem;
    text-indent:10rpx;
    padding-top:10rpx;
    margin:10rpx 0;
    display: inline-block;
    border:0.1rpx solid rgba(77, 77, 77, 0.2);
}
._remark .control{
    display: flex;
    justify-content:flex-end;
}
._remark .control .btn{
    color: #fff;
    font-size: 0.7rem;
    display: inline-block;
    margin-left: 20rpx;
    padding:10rpx 30rpx;
    background:#3DB85D;
}
._remark .control .btn.cancel{
    background:darkorange;
}
