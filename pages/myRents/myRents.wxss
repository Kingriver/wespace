/* pages/myRents/myRents.wxss */
.record{
    width: 100%;
    display: flex;
    position: relative;
    border-bottom: 0.1rpx solid #ddd;
    margin-bottom:10rpx;
}
.record .img{
    top:20rpx;
    left:20rpx;
    width:200rpx;
    height: 160rpx;
    background: #ccc;
    position: absolute;
}
.record .img image{
    width:100%;
    height: 100%;
}
.record .content{
    padding:20rpx 20rpx 20rpx 240rpx;
    width: 100%;
    height: 160rpx;
    background: #fff;
}
.record .content .item:first-child{
    margin-bottom: 10rpx;
}
.record .content .item:last-child{
    margin-top: 6rpx;
    display: flex;
    justify-content: space-between;
}
.record .content .item .time{
    color:#ccc;
    font-size: 0.8rem;
}
.record .content .item .cost{
    color:#3DB85D;
    font-size: 0.8rem;
}
.record .content .item .remark{
    color:darkorange;
    font-size:0.6rem;
    border:0.1rpx solid darkorange;
    padding: 4rpx 12rpx;
}
._remark{
    background: #fff;
    padding:20rpx;
    border-top:0.1rpx solid rgba(77, 77, 77, 0.2);
    border-bottom:0.1rpx solid rgba(77, 77, 77, 0.2);
}
._remark.hidden{
    display: none;
}
._remark textarea{
    font-family: "微软雅黑";
    font-size: 0.8rem;
    padding:10rpx;
    margin:10rpx 0;
    display: inline-block;
    border:0.1rpx solid rgba(77, 77, 77, 0.2);
}
._remark .control{
    display: flex;
    justify-content:flex-end;
}
._remark .control .btn{
    color: #fff;
    font-size: 0.7rem;
    display: inline-block;
    margin-left: 20rpx;
    padding:10rpx 30rpx;
    background:#3DB85D;
}
._remark .control .btn.cancel{
    background:darkorange;
}