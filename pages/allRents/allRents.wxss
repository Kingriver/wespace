/* pages/allRents/allRents.wxss */
.search-box{
    width: 100%;
    background: #fff;
    border-bottom: 0.1rpx solid #ddd;
}
form{
    display: flex;
    margin:20rpx;
    position: relative;
    justify-content: space-between;
}
form input.search-input,form button.search-btn{
    font-size:0.8rem;
    display: inline-block;
    border-radius: 0;
    height: 60rpx;
    line-height: 60rpx;
}
form input.search-input{
    color:#666;
    width: 184%;
    position: relative;
    padding-left:16rpx;
    text-indent: 6rpx;
}
form input.search-input:after {
    content:" ";
    width:200%;
    height:200%;
    position:absolute;
    top:0;
    left:0;
    border:1px solid rgba(0, 0, 0, 0.2);
    -webkit-transform:scale(0.5);
    transform:scale(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
form button.search-btn{
    top:0;
    right:0;
    color: #fff;
    position: absolute;
    background: #06BD04;
}
form button.search-btn:after{
    border-radius: 0;
    border:1px solid #06BD04;
}

/*condition*/
.condition{
    width: 100%;
    background: #fff;
    border-bottom: 0.1px solid #ddd;
}
.condition .choose-box{
    margin:20rpx;
    display: flex;
    justify-content: space-between;
}
.condition .choose-box .choose-item{
    width: 25%;
    color:#999;
    padding-left:28rpx;
    font-size: 0.75rem;
    position: relative;
    background: url('../../images/system/iconfont-triangle.png') no-repeat 120rpx 2rpx;
}
.condition .choose-box .choose-item:after{
    content: "";
    display: block;
    top: -2rpx;
    right:1rpx;
    width:0.1rpx;
    height:40rpx;
    background: #ccc;
    position: absolute;
}
.condition .choose-box .choose-item:last-child:after{
    width:0;
}

.condition .choose-box .choose-item.selected{
    color:#06BD04;
    background: url('../../images/system/iconfont-triangle-ed.png') no-repeat 120rpx 2rpx;
}

/*box-cover*/
.showbox{
    width: 100%;
    height: 1060rpx;
    position: relative;
}
.box-cover{
    top:0;
    left:0;
    width:100%;
    height: 100%;
    position: absolute;
    background: rgba(0, 0, 0, 0.25);
}
.box-cover .coobox{
    padding:20rpx;
    background: #fff;
}
.box-cover .coobox .title{
    padding-left: 28rpx;
    font-size: 0.75rem;
    color: #666;
}
.box-cover.hidden{
    display: none;
}
.box-cover .coobox .place-box{
    display: flex;
    justify-content: space-between;
}
.box-cover .coobox .place-box .areas{
    width: 24%;
}
.box-cover .coobox .place-box .areas text{
    display: block;
    padding:12rpx 20rpx;
    background: #fff;
    font-size: 0.75rem;
    color:#666;
    border-bottom: 0.1rpx solid rgba(100, 100, 100, 0.1);
}
.box-cover .coobox .place-box .areas text.selected{
    background: #eee;
}
.box-cover .coobox .place-box .items{
    width: 76%;
    height: 1060rpx;
    background: #eee;
}
.box-cover .coobox .place-box .items text{
    font-size: 0.75rem;
    color:#666;
    display: block;
    padding:12rpx 60rpx;
    border-bottom: 0.1rpx solid rgba(100, 100, 100, 0.1);
}
.box-cover .coobox.place{
    padding:0;
    height: 1060rpx;
}

